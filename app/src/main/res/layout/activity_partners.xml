<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".partners">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/i1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/trans"
            android:layout_weight="1"
            android:src="@drawable/logo12"></ImageView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/trans"
            android:fontFamily="@font/abril_fatface"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            android:text="Our Partners "
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            android:visibility="visible"></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotels"
        android:textSize="30sp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/opensans"
        />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/h1"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:clickable="true"
                app:cardCornerRadius="30dp"
                android:layout_margin="20dp"
                app:cardElevation="20dp"
                app:cardPreventCornerOverlap="true">

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hotel1"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="100dp"
                    android:padding="10dp"
                    android:text="ABC Hotel is a very Popular Hotel In Mumbai. It is famous for its delicious foods and Drinks."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/lm1"
                    android:layout_height="30dp"
                    android:layout_marginTop="180dp"
                    android:text="Learn More"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/purple_700"
                    android:layout_marginLeft="220dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/h2"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_margin="20dp"
                app:cardElevation="20dp"
                app:cardPreventCornerOverlap="true">

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hotel2"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="100dp"
                    android:padding="10dp"
                    android:text="ABC Hotel is a very Popular Hotel In Mumbai. It is famous for its delicious foods and Drinks."
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/lm2"
                    android:layout_marginTop="180dp"
                    android:text="Learn More"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/purple_700"
                    android:layout_marginLeft="220dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NGO's"
        android:textSize="30sp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/opensans"
        />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/ngo1"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_margin="20dp"
                app:cardElevation="20dp"
                app:cardPreventCornerOverlap="true">

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ngo1"/>

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="100dp"
                    android:padding="10dp"
                    android:text="ABC NGO is a very Popular in Mumbai. It is famous for its good Deeds and their Hardwork. This NGO provides Food,Clothes and other essential things to poor and needy people."
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="180dp"
                    android:id="@+id/lm3"
                    android:text="Learn More"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/purple_700"
                    android:layout_marginLeft="220dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ngo2"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_margin="20dp"
                app:cardElevation="20dp"
                app:cardPreventCornerOverlap="true">

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ngo2"/>
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="100dp"
                    android:padding="10dp"
                    android:text="ABC NGO is a very Popular in Mumbai. It is famous for its good Deeds and their Hardwork. This NGO provides Food,Clothes and other essential things to poor and needy people."
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="180dp"
                    android:id="@+id/lm4"
                    android:text="Learn More"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/purple_700"
                    android:layout_marginLeft="220dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </HorizontalScrollView>
</LinearLayout>