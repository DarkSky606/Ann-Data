<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="62dp"
                    android:layout_height="60dp"
                    android:background="@color/trans"
                    android:paddingLeft="0dp"
                    android:src="@drawable/logo12"></ImageView>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/trans"
                    android:fontFamily="@font/abril_fatface"
                    android:gravity="center_horizontal"
                    android:paddingBottom="2dp"
                    android:text="Donate "
                    android:textColor="@color/black"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    android:visibility="visible"></TextView>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:hint="Name"
                    android:background="@drawable/input_bg"
                    android:singleLine="true"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:boxStrokeColor="@color/black"
                    app:hintEnabled="true">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/black"
                android:hint="Food Items"
                app:boxStrokeColor="@color/black"
                app:hintEnabled="true"

                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fItem"
                    android:layout_width="match_parent"
                    android:background="@drawable/input_bg"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Food Type :"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="5dp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/radioGroup">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/veg"
                    android:text="Veg"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:textSize="20sp"
                    android:onClick="checkedBt" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/nonveg"
                    android:layout_marginRight="10dp"
                    android:text="Non-Veg"
                    android:textStyle="bold"
                    android:onClick="checkedBt"
                    android:textSize="20sp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/both"
                    android:text="Both"
                    android:textStyle="bold"
                    android:onClick="checkedBt"
                    android:textSize="20sp"/>
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:hint="Description"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/black"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cookDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/input_bg"
                    android:hint="Cooking Date"
                    android:inputType="date"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="57dp"
                android:id="@+id/SeDate"
                android:layout_marginTop="-70dp"
                android:layout_marginLeft="230dp"
                android:src="@drawable/baseline_calendar_month_24"/>

            <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content" android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/black"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cookTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_bg"
                android:hint="Cooking Time"
                android:layout_gravity="end"
                android:singleLine="true"
                android:inputType="time"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


        </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="57dp"
                android:id="@+id/SeTime"
                android:layout_marginTop="-70dp"
                android:layout_marginLeft="230dp"
                android:src="@drawable/baseline_access_time_filled_24"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:layout_marginTop="10dp"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:maxLength="10">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="Donate" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>